<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="form_toolbar">
        <item name="android:background">#013F7C</item>
    </style>
    <style name="form_toolbar_text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>


    </style>
    <style name="form_text_view">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">#53714B</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginLeft">5dp</item>


    </style>
    <style name="edit_text_login_phone_number2" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">45.0dip</item>
    </style>

    <style name="edit_text_login_phone_number3" parent="@style/edit_text_login_phone_parent2">
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLength">10</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="edit_text_login_phone_parent2">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/colorTextBlueDark</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">2.0dip</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_height">45.0dip</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="form_edit_text_style">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="form_esterik">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
