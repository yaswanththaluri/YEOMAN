<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>


            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="4dp" android:left="4dp" android:right="10dp" android:top="4dp" />

                    <gradient android:angle="270" android:endColor="#00d6dadf" android:startColor="#00c4c7a9" />
                    <stroke android:width="1dp" android:color="#C0C0C0" />
                    <corners android:radius="5dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/dropdown_inactive" />

            </item>

        </layer-list>

    </item>

</selector>