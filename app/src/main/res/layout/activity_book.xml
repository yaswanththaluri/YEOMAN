<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.BookActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HI YEOMAN"
            android:id="@+id/yeoman_text"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp">

        </TextView>

        <Spinner
            android:id="@+id/select_village"
            style="@style/form_edit_text_style"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/VillageNames"
            android:layout_below="@id/yeoman_text"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:id="@+id/select_date"
            android:layout_below="@id/select_village"
            style="@style/form_edit_text_style"
            android:layout_width="300dp"
            android:layout_marginTop="50dp"
            android:text="@string/Select_date"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:background="@drawable/form_edit_text"
            android:drawableRight="@drawable/calender_icon"
            android:paddingRight="15dp" />

        <Button
            android:id="@+id/Search"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#53714B"
            android:padding="20dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/select_date"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:text="@string/search"
            android:textColor="@android:color/white" />


    </RelativeLayout>
</layout>